<h1>Add a new post</h1>

<%= form_for @post do |f|  %>
    <% if @post.errors.any? %>
        <h2>Erros</h2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
              <% end %>
        </ul>
              <% end %>
<p> <%= f.label :title  %> <br/>
  <%= f.text_field :title  %>
</p>

<p> <%= f.label :content  %> <br/>
  <%= f.text_area :content  %>
</p>

<p>
  <%= f.submit "Add a new post"  %>
</p>

<% end %>